# Multi-source subscriptions (CSV). Preferred way.
SUBSCRIPTION_URLS=https://raw.githubusercontent.com/example/repo/main/subscription-a.txt,https://raw.githubusercontent.com/example/repo/main/subscription-b.txt

# Legacy single URL fallback. Used only when SUBSCRIPTION_URLS is empty.
SUBSCRIPTION_URL=https://raw.githubusercontent.com/example/repo/main/subscription.txt

# LAN listener for client devices.
LAN_BIND_IP=0.0.0.0
PROXY_PORT=7890

# Proxy auth in username:password format.
PROXY_AUTH=proxyuser:change_me

# Local API endpoint for management and health checks.
API_BIND=127.0.0.1:9090
API_SECRET=change_me_controller_secret

# Core behavior.
MIHOMO_LOG_LEVEL=info
HEALTHCHECK_URL=https://www.gstatic.com/generate_204

# Health-check intervals (seconds).
HEALTHCHECK_INTERVAL=180
HEALTHCHECK_TIMEOUT=5000

# Group selection tuning.
URL_TEST_INTERVAL=180
URL_TEST_TOLERANCE=50
FALLBACK_INTERVAL=90

# Subscription sanitizer/worker behavior.
SANITIZE_INTERVAL=300
MIN_VALID_PROXIES=1
SANITIZE_ALLOW_PROTOCOLS=vless,trojan,ss,vmess
EXCLUDE_COUNTRIES=RU
SANITIZE_LOG_JSON=true
SANITIZE_VALIDATE_TIMEOUT_SEC=10
SANITIZE_VALIDATE_MAX_ITERATIONS=80

# Throughput ranking behavior (applied after successful sync).
THROUGHPUT_ENABLE=true
THROUGHPUT_TOP_N=50
THROUGHPUT_TEST_URL=https://speed.cloudflare.com/__down?bytes=5000000
THROUGHPUT_TIMEOUT_SEC=12
THROUGHPUT_MIN_KBPS=50
